---
import Download from "../icons/Download.astro";
import Layout from "../layouts/Layout.astro";
import Mail from "../icons/Mail.astro";
import Shape from "../icons/Shape.astro";
---

<style>
  .highlight {
    color: #12f7d6;
  }
</style>

<Layout title="Eduardo Valencia - Portfolio">
  <main class="h-fit pb-12">
    <div>
      <h1 class="flex justify-center mx-auto text-[#98FAEC] text-8xl my-11">
        Developer
      </h1>
    </div>
    <div class="flex flex-wrap justify-between">
      <div
        class="relative h-fit rounded-tl-[100px] rounded-br-[100px] p-4 max-w-fit justify-center items-center border-white border-[3px]"
      >
        <div
          class="absolute top-[-6px] left-[-6px] inset-0 border-t-[4px] border-l-[4px] border-[#98faec] rounded-tl-[101px] z-0 pointer-events-none"
        >
        </div>
        <img
          src="/img/profile.jpg"
          alt="Foto de perfil"
          class="mx-auto size-24 rounded-full mt-5 mb-2 border-[#98faec] border-[3px]"
        />
        <p class="text-center text-2xl">
          Eduardo
          <p class="text-xs text-center">Front-End Developer</p>
        </p>
        <a href="mailto:EduardoVG@proton.me">EduardoVG@proton.me</a>
        <img src="" alt="" /> MÃ©xico
        <img src="" alt="" /> Available for work
        <div class="flex">
          <p>HTML</p>
          <p>CSS</p>
          <p>JS</p>
          <p>REACT</p>
        </div>

        <button
          class="relative mt-4 bg-white px-2 py-3 rounded-3xl text-black mb-5 z-10 flex h-[50px] w-40 items-center justify-center overflow-hidden shadow-2xl transition-all before:absolute before:h-0 before:w-0 before:rounded-full before:bg-[#12f7d6] before:duration-[350ms] before:ease-out hover:before:h-56 hover:before:w-56"
        >
          <a class="z-20" href="">Download CV</a>

          <Download class="mx-2 z-20 size-6" />
        </button>
      </div>

      <div class="size-96 w-[600px] font-thin">
        <p class="text-6xl font-ubuntu leading-tight">
          Hey <br /> I'm <span class="highlight">Eduardo</span>, <br /> Front-End
          Developer
        </p>
        <p class="mt-16">
          I help business grow by crafting amazing web experiences. If you're
          looking for a developer that likes to get stuff done.
        </p>

        <p class="flex text-2xl items-center text-[#12F7D6] font-bold mt-8">
          Lets Talk!
          <span class="bg-[#43454D] rounded-full ml-3">
            <Shape class="size-9 p-[8px] text-[#12F7D6]" />
          </span>
        </p>
      </div>
      <div
        class="flex flex-col justify-center items-center size-80 w-44 bg-[#1A1E23] rounded-[60px] gap-y-8"
      >
        <div class="flex gap-5">
          <p class="text-4xl pl-4 text-[#98faec] font-bold">4</p>
          <p class="text-sm text-wrap">Programming Languages</p>
        </div>
        <div class="flex gap-5">
          <p class="text-4xl pl-4 text-[#98faec] font-bold">6</p>
          <p class="text-sm text-wrap">Development Tools</p>
        </div>
        <div class="flex gap-5">
          <p class="text-4xl pl-4 text-[#98faec] font-bold">8</p>
          <p class="text-sm text-wrap">Years of Experience</p>
        </div>
      </div>
    </div>
  </main>
</Layout>
